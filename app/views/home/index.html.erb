
<% if false %>
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <h2 class="text-gray-800 font-medium text-lg text-center mb-6"><%= category.name %></h2>
        <%= category.image.present? ? image_tag(category.image, class: "max-w-lg") : image_tag("http://via.placeholder.com/512") %>
      </div>
    <% end %>
  <% end %>
</div>
<% end %>

<div class="w-full grid grid-cols-12 mt-8 items-center gap-4">
  <% @products.each do |product| %>
    <%= link_to product_path(product), class: "span-#{product.span} h-96" do %>
      <div class="flex flex-col h-full">
        <% if false %>
          <h2 class="text-gray-800 font-medium text-lg text-center mb-6"><%= product.name %></h2>
        <% end %>
        <%= product.images.present? ? image_tag(product.images.first, class: "h-full w-full object-cover") : image_tag("http://via.placeholder.com/512", class: "h-full w-full object-cover") %>
      </div>
    <% end %>
  <% end %>
</div>


